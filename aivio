name: AIVIO Auto Video Pipeline

on:
  workflow_dispatch:
  schedule:
    - cron: "0 3 * * *"   # Runs daily at 3 AM UTC

jobs:
  generate-and-upload:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: "3.10"

      - name: Install dependencies
        run: |
          pip install openai google-api-python-client google-auth google-auth-oauthlib moviepy pillow requests

      - name: Create YouTube credentials file
        run: |
          echo '${{ secrets.YOUTUBE_CREDS }}' > youtube_creds.json

      - name: Run AIVIO automation
        env:
          OPENAI_API_KEY: ${{ secrets.OPENAI_API_KEY }}
        run: |
          python main.py
